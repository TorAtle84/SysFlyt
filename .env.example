# Database
DATABASE_URL="postgresql://postgres:postgres@db:5432/sluttfase?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-change-this-in-production"

# Email (SMTP) - Optional for dev, required for email functionality
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@sysflyt.no"

# Admin (for seed)
DEFAULT_ADMIN_PASSWORD="Admin123!"

# Environment
NODE_ENV="development"

# BIM / Modell
# Maks filst√∏rrelse (MB) for modellopplasting (default: 500)
MODEL_MAX_UPLOAD_MB="500"

# Reports
# Set REPORTS_ENABLED=false to disable scheduled emails (recommended in dev).
REPORTS_ENABLED="true"
REPORT_SEND_AT="06:00"
REPORT_TIMEZONE="Europe/Oslo"
# Optional override for report links (falls back to NEXTAUTH_URL).
REPORT_BASE_URL="http://localhost:3000"
REPORTS_CRON_SECRET=""
